{
  "expo": {
    "name": "مرسول",
    "slug": "marsool-app",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/images/icon.png",
    "scheme": "marsool",
    "userInterfaceStyle": "light",
    "newArchEnabled": true,
    "primaryColor": "#6B4CE6",
    "splash": {
      "image": "./assets/images/splash-icon.png",
      "resizeMode": "contain",
      "backgroundColor": "#6B4CE6"
    },
    "ios": {
      "supportsTablet": true,
      "bundleIdentifier": "com.marsooliq.app",
      "googleServicesFile": "./GoogleService-Info.plist",
      "infoPlist": {
        "NSCameraUsageDescription": "يحتاج التطبيق إلى الوصول إلى الكاميرا لالتقاط صور المنتجات",
        "NSPhotoLibraryUsageDescription": "يحتاج التطبيق إلى الوصول إلى معرض الصور لاختيار صور المنتجات"
      }
    },
    "android": {
      "adaptiveIcon": {
        "foregroundImage": "./assets/images/adaptive-icon.png",
        "backgroundColor": "#6B4CE6"
      },
      "package": "com.marsooliq.app",
      "googleServicesFile": "./google-services.json",
      "permissions": [
        "INTERNET",
        "ACCESS_NETWORK_STATE",
        "CAMERA",
        "READ_EXTERNAL_STORAGE",
        "WRITE_EXTERNAL_STORAGE"
      ],
      "versionCode": 1
    },
    "web": {
      "bundler": "metro",
      "output": "static",
      "favicon": "./assets/images/favicon.png"
    },
    "plugins": [
      "expo-router",
      [
        "expo-splash-screen",
        {
          "image": "./assets/images/splash-icon.png",
          "imageWidth": 200,
          "resizeMode": "contain",
          "backgroundColor": "#6B4CE6"
        }
      ],
      [
        "@react-native-firebase/app"
      ]
    ],
    "experiments": {
      "typedRoutes": true
    },
    "extra": {
      "eas": {
        "projectId": "your-project-id"
      }
    }
  }
}
